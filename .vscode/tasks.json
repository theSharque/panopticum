{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "type": "shell",
      "command": "/usr/bin/bash",
      "args": [
        "-lc",
        "./gradlew shadowJar -q && java -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005 -jar build/libs/panopticum-0.1-all.jar"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "custom",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "BUILD SUCCESSFUL",
             "endsPattern": "(Listening for transport dt_socket at address: 5005|.*Startup completed.*)"
          },
          "pattern": {
            "regexp": ".*"
          }
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      }
    }
  ]
}
